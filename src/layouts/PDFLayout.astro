---
import "../styles/global.css";
const { title = 'PDF Document' } = Astro.props;
---

<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PDF - {title}</title>
    <style>
      @page {
        size: A4;
        margin: 0;
      }
    </style>
  </head>
  <body class="bg-white size-a4 mx-auto relative">
    <slot />
  </body>
</html>
